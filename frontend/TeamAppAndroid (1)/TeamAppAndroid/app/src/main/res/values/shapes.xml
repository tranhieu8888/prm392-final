<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base/alias dùng nhiều nơi -->
    <style name="Shape.Rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- (Các style khác nếu bạn muốn giữ) -->
    <style name="Shape.Rounded.SM">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Shape.Rounded.MD">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Shape.Rounded.LG">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Shape.Pill">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Shape.RoundCornerFull">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Nếu đâu đó dùng @style/Shape -->
    <style name="Shape" parent="@style/Shape.Rounded.MD" tools:ignore="ResourceCycle" />

</resources>
